<!-- views/action-result.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Resultado da Ação</title>
    <style>
        body { font-family: sans-serif; background-color: #2c2f33; color: white; text-align: center; padding-top: 50px; }
        .container { max-width: 500px; margin: auto; background-color: #23272a; padding: 20px; border-radius: 8px; }
        .success { color: #28a745; }
        .error { color: #dc3545; }
    </style>
</head>
<body>
    <div class="container">
        <% if (actionResult.success) { %>
            <h1 class="success">✅ Sucesso!</h1>
        <% } else { %>
            <h1 class="error">❌ Erro!</h1>
        <% } %>
        <p><%= actionResult.message %></p>
        <p>Você já pode fechar esta página.</p>
    </div>
</body>
</html>