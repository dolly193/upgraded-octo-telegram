<!-- views/verify-receipt.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Verificar Comprovante</title>
    <style>
        body { font-family: sans-serif; background-color: #2c2f33; color: white; text-align: center; padding-top: 50px; }
        .container { max-width: 600px; margin: auto; background-color: #23272a; padding: 20px; border-radius: 8px; }
        img { max-width: 100%; border-radius: 5px; margin-top: 15px; }
        .actions { margin-top: 20px; }
        button { padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin: 0 10px; }
        .approve { background-color: #28a745; color: white; }
        .reject { background-color: #dc3545; color: white; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Verificação de Comprovante</h1>
        <p><strong><%= details.title %></strong> de <strong><%= details.userTag %></strong></p>
        <p>Produto: <%= details.productName %> (R$ <%= details.productPrice %>)</p>
        <img src="<%= details.imageUrl %>" alt="Comprovante de Pagamento">
        <form action="/verify/action/<%= verificationId %>" method="post" class="actions">
            <button type="submit" name="action" value="approve" class="approve">Aprovar</button>
            <button type="submit" name="action" value="reject" class="reject">Recusar</button>
        </form>
    </div>
</body>
</html>